<div class ="container">
  <h1>New Post</h1>
</div>

<% if @current_user %>
<div class="column container">
  <%= form_with :model => @post do |form| %>
    <div class = "row">
    <p>
      <%= form.label "title" %>
      <%= form.text_field "title" %>
    </p>
    </div>
    <div class = "row">
    <p>
      <%= form.label "description" %>
      <%= form.text_field "description" %>
    </p>
    </div>
    <div class = "row">
    <p>
      <%= form.label "posted_on" %>
      <%= form.date_field "posted_on" %>
    </p>
    </div>
  </div>
    <div class ="container">
    <p>
     <%= form.submit "Submit", class:"btn btn-primary" %>
    </p>
    </div>
    <%= form.hidden_field "place_id" %>
  <% end %>

  <% else%>
    <div class = "container">You must first <a href="/login">login</a> to post.</div>
<% end %>
