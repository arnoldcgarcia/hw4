<div class = "container">
<h1><%= @place["name"] %></h1>
</div>

<p>
<div class="container">
<%if @current_user%>
<a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary" role="button">New Post</a>
<%end%>
</div>
</p>

<div class = "container">
<div class = "row">
<% if @current_user %>
  <% for post in @posts %>
    <% if post.user_id == @current_user.id %>
      <div class = "col-md-4">
      <h3><%= post.title %></h3>
      <h4><%= post.posted_on %></h4>
      <p><%= post.description %></p>
      </div>
    <% end %>
  <% end %>
<% end %>
</div>
</div>


<div class = "container">
<p><a href="/places">Back to All Places</a></p>
</div>