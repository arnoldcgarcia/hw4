<div class = "container">
  <h1><%= @place["name"] %></h1>
</div>

<div class="container">
  <%if @current_user%>
  <p><a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary" role="button">New Post</a></p>
  <%end%>
</div>


<div class = "row">
  <% if @current_user %>
    <% for post in @posts %>
      <% if post.user_id == @current_user.id %>
        <div class="col-md-4">
          <h3><%= post.title %></h3>
          <h4><%= post.posted_on %></h4>
          <% if post.uploaded_image.attached? %>
            <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid img-responsive">
          <% else %>
            <img src="<%= post["image"] %>" class="img-fluid img-responsive">
          <% end %>
          <p><%= post.description %></p>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>



<div class = "container">
  <p><a href="/places">Back to All Places</a></p>
</div>